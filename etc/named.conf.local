//
// Do any local configuration here
//

// Consider adding the 1918 zones here, if they are not used in your
// organization
include "/etc/bind/zones.rfc1918";

//forward zone
zone "hitoma.com" IN {
     type master;
     file "hitoma.com.db";
     allow-update { none; };
     allow-query { any; };
};

//backward zone
zone "1.168.192.in-addr.arpa" IN {
     type master;
     file "hitoma.com.rev";
     allow-update { none; };
     allow-query { any; };
};

